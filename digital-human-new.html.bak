    <script>
        // 视频弹窗和播放控制逻辑
        document.addEventListener('DOMContentLoaded', function() {
            // 获取弹窗元素和相关DOM节点
            const modal = document.getElementById('video-modal');
            const modalVideo = document.getElementById('modal-video');
            const modalTitle = document.getElementById('modal-title');
            const closeModal = document.querySelector('.close-modal');
            const thumbnails = document.querySelectorAll('.video-thumbnail');
            
            // 简化视频处理流程，专注于显示首帧
            const thumbnailVideos = document.querySelectorAll('.thumbnail-video');
            console.log('找到视频缩略图:', thumbnailVideos.length);
            
            // 处理所有视频缩略图
            thumbnailVideos.forEach(video => {
                // 设置基础视频属性
                video.muted = true;
                video.playsInline = true;
                video.preload = 'metadata'; // 仅预加载元数据以显示首帧
                video.controls = false;
                
                // 应用基础样式
                video.style.width = '100%';
                video.style.height = '100%';
                video.style.objectFit = 'contain';
                video.style.position = 'absolute';
                video.style.top = '0';
                video.style.left = '0';
                video.style.zIndex = '1';
                
                // 强制加载视频首帧
                video.addEventListener('loadedmetadata', function() {
                    try {
                        // 确保视频定位到首帧
                        this.currentTime = 0.1;
                        
                        // 确保视频暂停以显示首帧
                        this.pause();
                    } catch(e) {
                        console.warn('设置视频首帧失败:', e);
                    }
                }, { once: true });
                
                // 错误处理 - 显示错误图标
                video.addEventListener('error', function() {
                    console.warn('视频加载失败:', this.src);
                    const errorIcon = document.createElement('div');
                    errorIcon.className = 'video-error';
                    errorIcon.innerHTML = '<i class="bi bi-exclamation-triangle"></i>';
                    if (this.parentElement && !this.parentElement.querySelector('.video-error')) {
                        this.parentElement.appendChild(errorIcon);
                    }
                }, { once: true });
            });
            
            // 不需要创建播放图标覆盖层，因为我们在HTML中已经添加了
            
            // 简化的错误处理函数
            function handleVideoError(videoElem) {
                console.error('视频加载错误', videoElem.src);
                
                // 确保视频元素存在且有父元素
                if (!videoElem || !videoElem.parentElement) return;
                
                // 添加错误类名
                videoElem.parentElement.classList.add('error');
                
                // 检查是否已经有错误占位符
                if (videoElem.parentElement.querySelector('.error-overlay')) return;
                
                // 添加错误占位符
                const errorOverlay = document.createElement('div');
                errorOverlay.className = 'error-overlay';
                errorOverlay.innerHTML = '<i class="bi bi-exclamation-triangle"></i>';
                errorOverlay.style.position = 'absolute';
                errorOverlay.style.top = '0';
                errorOverlay.style.left = '0';
                errorOverlay.style.width = '100%';
                errorOverlay.style.height = '100%';
                errorOverlay.style.display = 'flex';
                errorOverlay.style.alignItems = 'center';
                errorOverlay.style.justifyContent = 'center';
                errorOverlay.style.backgroundColor = 'rgba(0,0,0,0.7)';
                errorOverlay.style.color = 'white';
                errorOverlay.style.fontSize = '1.5rem';
                errorOverlay.style.zIndex = '3';
                videoElem.parentElement.appendChild(errorOverlay);
            }
            
            // 处理视频加载错误
            video.addEventListener('error', function(e) {
                handleVideoError(this);
            }, { once: true });
            
            // 确保视频不会自动播放
            video.addEventListener('play', function(e) {
                // 只允许弹窗中的视频播放
                if (this !== modalVideo) {
                    e.preventDefault();
                    this.pause();
                }
            });
        });
        
        // 当前播放的视频
        let currentPlayingVideo = null;
        
        // 视频资源缓存
        const videoCache = new Map();
        
        // 预加载状态跟踪
        let preloadingQueue = [];
        let isPreloading = false;
        
        // 打开弹窗并播放视频 - 优化资源使用
        function openVideoModal(videoSrc, title) {
            console.log('准备打开视频:', videoSrc);
            
            // 停止所有正在播放的视频，释放资源
            const allVideos = document.querySelectorAll('video');
            allVideos.forEach(video => {
                if (!video.paused) {
                    video.pause();
                    video.currentTime = 0;
                }
            });
            
            // 设置标题
            modalTitle.textContent = title;
            
            // 添加加载状态指示器
            const loadingIndicator = document.createElement('div');
            loadingIndicator.className = 'video-loading';
            loadingIndicator.innerHTML = '<i class="bi bi-arrow-repeat"></i> 视频加载中...';
            modalVideo.parentNode.appendChild(loadingIndicator);
            
            // 重置之前的视频
            modalVideo.pause();
            if (modalVideo.src) {
                modalVideo.removeAttribute('src');
                modalVideo.load();
            }
            
            // 设置新视频源
            modalVideo.src = videoSrc;
            modalVideo.preload = 'auto'; // 强制预加载
            
            // 显示弹窗
            modal.style.display = 'block';
            
            // 预加载相邻视频
            scheduleAdjacentPreload(videoSrc);
            
            // 视频加载完成后移除加载状态
            modalVideo.addEventListener('canplay', function onCanPlay() {
                // 移除加载状态
                if (loadingIndicator.parentNode) {
                    loadingIndicator.parentNode.removeChild(loadingIndicator);
                }
                
                // 确保当前没有其他视频在播放
                let otherVideoPlaying = false;
                allVideos.forEach(video => {
                    if (!video.paused && video !== modalVideo) {
                        otherVideoPlaying = true;
                        video.pause();
                    }
                });
                
                // 不自动播放，显示播放按钮
                console.log('视频加载完成，等待用户点击播放');
                
                // 添加大型播放按钮
                const playButton = document.createElement('button');
                playButton.className = 'play-button-large';
                playButton.innerHTML = '<i class="bi bi-play-circle"></i>';
                playButton.onclick = function() {
                    modalVideo.play().then(() => {
                        this.style.display = 'none';
                        currentPlayingVideo = modalVideo;
                        
                        // 添加播放控制UI
                        const controlsOverlay = document.createElement('div');
                        controlsOverlay.className = 'video-controls-overlay';
                        controlsOverlay.innerHTML = `
                            <div class="video-controls">
                                <button class="control-button play-pause">
                                    <i class="bi bi-pause-fill"></i>
                                </button>
                            </div>
                        `;
                        
                        // 清除之前的控制层
                        const existingControls = modalVideo.parentNode.querySelector('.video-controls-overlay');
                        if (existingControls) {
                            existingControls.parentNode.removeChild(existingControls);
                        }
                        
                        // 添加新控制层
                        modalVideo.parentNode.appendChild(controlsOverlay);
                        
                        // 添加播放/暂停切换功能
                        const playPauseBtn = controlsOverlay.querySelector('.play-pause');
                        playPauseBtn.addEventListener('click', function() {
                            if (modalVideo.paused) {
                                modalVideo.play();
                                this.innerHTML = '<i class="bi bi-pause-fill"></i>';
                            } else {
                                modalVideo.pause();
                                this.innerHTML = '<i class="bi bi-play-fill"></i>';
                            }
                        });
                    }).catch(err => {
                        console.error('播放失败:', err);
                    });
                };
                
                // 添加播放按钮到视频容器
                modalVideo.parentNode.appendChild(playButton);
                
                // 移除事件监听器，避免重复触发
                modalVideo.removeEventListener('canplay', onCanPlay);
            });
            
            // 处理视频加载错误
            modalVideo.addEventListener('error', function(e) {
                console.error('视频加载错误:', e);
                if (loadingIndicator.parentNode) {
                    loadingIndicator.innerHTML = '<i class="bi bi-exclamation-triangle"></i> 视频加载失败，请重试';
                }
            }, { once: true });
            
            // 监听视频结束事件
            modalVideo.addEventListener('ended', function() {
                // 视频结束时显示重播按钮
                const replayButton = document.createElement('button');
                replayButton.className = 'replay-button';
                replayButton.innerHTML = '<i class="bi bi-arrow-clockwise"></i> 重新播放';
                replayButton.onclick = function() {
                    modalVideo.currentTime = 0;
                    modalVideo.play();
                    this.parentNode.removeChild(this);
                };
                modalVideo.parentNode.appendChild(replayButton);
                
                // 更新播放/暂停按钮状态
                const playPauseBtn = document.querySelector('.play-pause');
                if (playPauseBtn) {
                    playPauseBtn.innerHTML = '<i class="bi bi-play-fill"></i>';
                }
            }, { once: false });
            
            // 加载视频
            modalVideo.load();
            
            // 阻止滚动
            document.body.style.overflow = 'hidden';
        }
        
        // 关闭弹窗并停止视频
        function closeVideoModal() {
            // 暂停并重置视频
            modalVideo.pause();
            modalVideo.currentTime = 0;
            modalVideo.src = '';
            
            // 隐藏弹窗
            modal.style.display = 'none';
            
            // 恢复滚动
            document.body.style.overflow = '';
            
            // 清除当前播放视频的记录
            currentPlayingVideo = null;
        }
        
                         // 为每个视频项添加编号和固定分类信息
         const videoItems = document.querySelectorAll('.video-item');
         
         // 定义固定分类
         const fixedCategories = [
             '服务',   // 第一个视频
             '应用',   // 第二个视频
             '电商',   // 第三个视频
             '应用',   // 第四个视频
             '电商',   // 第五个视频
             '直播',   // 第六个视频
             '自媒体', // 第七个视频
             '自媒体', // 第八个视频
             '直播',   // 第九个视频
             '直播'    // 第十个视频
         ];
         
         // 设置分类颜色
         const categoryColors = {
             '服务': 'rgba(0, 112, 240, 0.8)',    // 蓝色
             '应用': 'rgba(76, 175, 80, 0.8)',    // 绿色
             '电商': 'rgba(233, 30, 99, 0.8)',    // 粉色
             '直播': 'rgba(156, 39, 176, 0.8)',   // 紫色
             '自媒体': 'rgba(255, 152, 0, 0.8)'   // 橙色
         };
         
         videoItems.forEach((item, index) => {
             // 添加视频索引标识
             item.setAttribute('data-index', (index + 1).toString());
             
             // 获取当前视频的分类
             const category = (index < fixedCategories.length) ? fixedCategories[index] : '其他';
             const color = categoryColors[category] || 'rgba(0, 112, 240, 0.8)';
             
             // 设置分类属性用于CSS选择器
             item.setAttribute('data-category', category);
             
             // 创建视频分类标签
             const categoryTag = document.createElement('div');
             categoryTag.className = 'video-category';
             
             // 添加图标和文字的组合
             const iconMap = {
                 '服务': 'bi-headset',
                 '应用': 'bi-app',
                 '电商': 'bi-cart',
                 '直播': 'bi-broadcast',
                 '自媒体': 'bi-camera-video'
             };
             
             const icon = iconMap[category] || 'bi-tag';
             categoryTag.innerHTML = `<i class="bi ${icon}"></i> ${category}`;
             categoryTag.className = 'video-category';
             
             // 设置样式
             categoryTag.style.position = 'absolute';
             categoryTag.style.top = '8px';
             categoryTag.style.right = '8px';
             categoryTag.style.padding = '4px 8px';
             categoryTag.style.backgroundColor = color;
             categoryTag.style.color = 'white';
             categoryTag.style.borderRadius = '16px';
             categoryTag.style.fontSize = '10px';
             categoryTag.style.fontWeight = '500';
             categoryTag.style.zIndex = '5';
             categoryTag.style.boxShadow = '0 2px 6px rgba(0,0,0,0.2)';
             categoryTag.style.display = 'flex';
             categoryTag.style.alignItems = 'center';
             categoryTag.style.gap = '3px';
             categoryTag.style.backdropFilter = 'blur(2px)';
             categoryTag.style.border = '1px solid rgba(255,255,255,0.2)';
             
             const thumbnail = item.querySelector('.video-thumbnail');
             thumbnail.appendChild(categoryTag);
         });
        
        // 为每个缩略图添加点击事件
        thumbnails.forEach(thumbnail => {
            thumbnail.addEventListener('click', function(event) {
                const videoSrc = this.getAttribute('data-video');
                const videoTitle = this.getAttribute('data-title');
                
                // 防止事件冒泡
                event.stopPropagation();
                
                // 如果有其他视频正在播放，先暂停它
                const allVideos = document.querySelectorAll('video');
                allVideos.forEach(video => {
                    if (!video.paused) {
                        video.pause();
                        video.currentTime = 0;
                    }
                });
                
                // 添加视图统计动画
                const viewCounter = document.createElement('div');
                viewCounter.className = 'view-counter';
                viewCounter.innerHTML = '<i class="bi bi-eye"></i> <span>点击观看</span>';
                viewCounter.style.position = 'absolute';
                viewCounter.style.bottom = '15px';
                viewCounter.style.right = '15px';
                viewCounter.style.backgroundColor = 'rgba(0,0,0,0.7)';
                viewCounter.style.color = 'white';
                viewCounter.style.padding = '5px 10px';
                viewCounter.style.borderRadius = '20px';
                viewCounter.style.fontSize = '12px';
                viewCounter.style.opacity = '0';
                viewCounter.style.transform = 'translateY(20px)';
                viewCounter.style.transition = 'all 0.3s ease';
                viewCounter.style.zIndex = '5';
                this.appendChild(viewCounter);
                
                // 显示点击动画
                setTimeout(() => {
                    viewCounter.style.opacity = '1';
                    viewCounter.style.transform = 'translateY(0)';
                    
                    // 稍后移除动画元素
                    setTimeout(() => {
                        viewCounter.style.opacity = '0';
                        setTimeout(() => viewCounter.remove(), 300);
                    }, 1500);
                }, 10);
                
                // 打开视频弹窗
                openVideoModal(videoSrc, videoTitle);
            });
            
            // 同时为播放图标覆盖层添加点击事件
            const playOverlay = thumbnail.querySelector('.play-overlay');
            if (playOverlay) {
                playOverlay.addEventListener('click', function(event) {
                    // 触发父元素的点击事件
                    event.stopPropagation();
                    thumbnail.click();
                });
            }
        });
        
        // 关闭按钮事件
        closeModal.addEventListener('click', closeVideoModal);
        
        // 点击弹窗外部区域关闭弹窗
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                closeVideoModal();
            }
        });
        
        // 按ESC键关闭弹窗
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && modal.style.display === 'block') {
                closeVideoModal();
            }
        });
        
        // 预加载相邻的视频
        function scheduleAdjacentPreload(currentVideoSrc) {
            // 如果预加载队列中已经有视频，先清空
            preloadingQueue = [];
            
            // 找到当前视频在列表中的位置
            let currentIndex = -1;
            const videoSources = Array.from(thumbnails).map((thumbnail, index) => {
                const src = thumbnail.getAttribute('data-video');
                if (src === currentVideoSrc) {
                    currentIndex = index;
                }
                return src;
            });
            
            if (currentIndex === -1) return; // 找不到当前视频
            
            // 添加后一个视频到预加载队列
            if (currentIndex < videoSources.length - 1) {
                preloadingQueue.push(videoSources[currentIndex + 1]);
            }
            
            // 如果不是第一个视频，添加前一个视频到预加载队列
            if (currentIndex > 0) {
                preloadingQueue.push(videoSources[currentIndex - 1]);
            }
            
            // 开始预加载
            startPreloading();
        }
        
        // 实际执行预加载
        function startPreloading() {
            if (isPreloading || preloadingQueue.length === 0) return;
            
            isPreloading = true;
            const videoSrc = preloadingQueue.shift();
            
            // 如果已经缓存过，不需要再次预加载
            if (videoCache.has(videoSrc)) {
                isPreloading = false;
                // 继续处理队列中的下一个
                if (preloadingQueue.length > 0) {
                    setTimeout(startPreloading, 50);
                }
                return;
            }
            
            console.log('预加载视频:', videoSrc);
            
            // 创建一个隐藏的视频元素用于预加载
            const preloadVideo = document.createElement('video');
            preloadVideo.style.display = 'none';
            preloadVideo.preload = 'metadata'; // 只加载元数据，节省流量
            preloadVideo.src = videoSrc;
            preloadVideo.muted = true;
            
            // 加载完成后，将其标记为已缓存
            preloadVideo.onloadedmetadata = function() {
                console.log('预加载完成:', videoSrc);
                videoCache.set(videoSrc, true);
                document.body.removeChild(preloadVideo);
                isPreloading = false;
                
                // 继续处理队列中的下一个
                if (preloadingQueue.length > 0) {
                    setTimeout(startPreloading, 50);
                }
            };
            
            // 错误处理
            preloadVideo.onerror = function() {
                console.warn('预加载失败:', videoSrc);
                document.body.removeChild(preloadVideo);
                isPreloading = false;
                
                // 继续处理队列中的下一个
                if (preloadingQueue.length > 0) {
                    setTimeout(startPreloading, 50);
                }
            };
            
            // 添加到DOM，但不显示
            document.body.appendChild(preloadVideo);
        }
    });
