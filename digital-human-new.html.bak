    <script>
        // 提前定义视频预加载辅助函数
        function preloadVideoFrame(videoElement, time) {
            return new Promise((resolve, reject) => {
                if (videoElement.readyState >= 2) {
                    // 已经有足够数据可以播放
                    videoElement.currentTime = time || 0.1;
                    resolve();
                    return;
                }
                
                const timeupdate = function() {
                    if (videoElement.currentTime >= (time || 0.1)) {
                        videoElement.removeEventListener('timeupdate', timeupdate);
                        videoElement.pause();
                        resolve();
                    }
                };
                
                const loadeddata = function() {
                    videoElement.currentTime = time || 0.1;
                    videoElement.addEventListener('timeupdate', timeupdate);
                };
                
                const error = function(e) {
                    videoElement.removeEventListener('loadeddata', loadeddata);
                    videoElement.removeEventListener('timeupdate', timeupdate);
                    reject(e);
                };
                
                videoElement.addEventListener('loadeddata', loadeddata);
                videoElement.addEventListener('error', error);
            });
        }
    </script>
    
