    <!-- 性能优化脚本 -->
    <script>
        // 视频资源管理器
        const VideoResourceManager = {
            // 存储已加载的视频信息
            loadedVideos: new Map(),
            
            // 低内存模式标记
            lowMemoryMode: false,
            
            // 初始化资源管理器
            init: function() {
                // 检测设备内存
                this.checkDeviceMemory();
                
                // 添加页面状态监听
                document.addEventListener('visibilitychange', this.handleVisibilityChange.bind(this));
                
                // 添加内存压力检测
                if ('MemoryPressureLevel' in Performance) {
                    const memoryObserver = new PerformanceObserver((list) => {
                        for (const entry of list.getEntries()) {
                            if (entry.type === 'memory-pressure' && 
                                (entry.state === 'critical' || entry.state === 'serious')) {
                                this.releaseUnusedResources();
                            }
                        }
                    });
                    
                    try {
                        memoryObserver.observe({ entryTypes: ['memory-pressure'] });
                    } catch (e) {
                        console.log('内存压力API不可用:', e);
                    }
                }
            },
            
            // 检测设备内存状态
            checkDeviceMemory: function() {
                // 通过navigator.deviceMemory检测（如果可用）
                if ('deviceMemory' in navigator) {
                    this.lowMemoryMode = navigator.deviceMemory < 4;
                    console.log(`设备内存: ${navigator.deviceMemory}GB, 低内存模式: ${this.lowMemoryMode}`);
                } else {
                    // 保守估计，移动设备默认使用低内存模式
                    this.lowMemoryMode = window.innerWidth <= 768;
                }
            },
            
            // 处理页面可见性变化
            handleVisibilityChange: function() {
                if (document.hidden) {
                    this.releaseUnusedResources();
                } else {
                    // 页面再次可见，可以按需恢复资源
                    console.log('页面再次可见，准备按需加载');
                }
            },
            
            // 释放不需要的资源
            releaseUnusedResources: function() {
                console.log('释放未使用的视频资源');
                
                // 停止所有不在视口内的视频加载
                const videos = document.querySelectorAll('video');
                videos.forEach(video => {
                    // 跳过modal中的视频
                    if (video === document.getElementById('modal-video')) return;
                    
                    // 暂停播放
                    if (!video.paused) {
                        video.pause();
                    }
                    
                    // 在低内存模式下，释放视频资源
                    if (this.lowMemoryMode) {
                        if (video.src) {
                            // 存储src到data-src属性
                            if (!video.dataset.src && video.src) {
                                video.dataset.src = video.src;
                            }
                            video.removeAttribute('src');
                            video.load(); // 强制释放
                        }
                    }
                });
                
                // 清理缓存
                this.loadedVideos.clear();
                
                // 尝试手动触发垃圾回收（虽然不一定生效）
                if (window.gc) {
                    try { window.gc(); } catch (e) {}
                }
                
                console.log('资源释放完成');
            }
        };
        
        // 移动端布局处理函数 - 性能优化版
        function handleMobileLayout() {
            if (window.innerWidth <= 768) {
                console.log('检测到移动设备，正在优化布局和资源使用...');
                
                // 初始化资源管理器
                VideoResourceManager.init();
                
                // 给主体添加移动端优化类
                const showcaseSection = document.querySelector('.video-showcase-section');
                if (showcaseSection) {
                    showcaseSection.classList.add('mobile-optimized');
                }
                
                // 添加移动端专用CSS类，避免过多的内联样式
                document.body.classList.add('mobile-view');
                
                // 强制设置视频网格为固定宽度布局
                const videoGrid = document.querySelector('.video-grid');
                if (videoGrid) {
                    videoGrid.style.cssText = `
                        display: flex;
                        flex-wrap: wrap;
                        justify-content: space-between;
                        width: 400px;
                        margin: 0 auto;
                        padding: 0;
                    `;
                    
                    // 检测屏幕宽度，对小屏幕应用缩放
                    if (window.innerWidth <= 400) {
                        videoGrid.style.transform = 'scale(0.95)';
                        videoGrid.style.transformOrigin = 'center top';
                        videoGrid.style.width = '390px';
                    }
                    
                    if (window.innerWidth <= 360) {
                        videoGrid.style.transform = 'scale(0.9)';
                        videoGrid.style.width = '360px';
                    }
                }
                
                // 使用统一CSS样式定义，优于重复的内联样式
                const styleElement = document.createElement('style');
                styleElement.textContent = `
                    /* 移动端视频项统一样式 */
                    .mobile-view .video-item {
                        width: 198px !important;
                        flex: 0 0 198px !important;
                        margin: 0 0 4px 0 !important;
                        padding: 0 !important;
                        box-sizing: border-box !important;
                    }
                    
                    .mobile-view .video-thumbnail {
                        position: relative !important;
                        height: 200px !important;
                        width: 198px !important;
                        overflow: hidden !important;
                        margin: 0 !important;
                        padding: 0 !important;
                        border-radius: 6px !important;
                        box-shadow: 0 4px 10px rgba(0,0,0,0.08) !important;
                    }
                    
                    .mobile-view .thumbnail-video {
                        position: absolute !important;
                        top: 0 !important;
                        left: 0 !important;
                        width: 100% !important;
                        height: 100% !important;
                        object-fit: cover !important;
                        border: none !important;
                        margin: 0 !important;
                        padding: 0 !important;
                    }
                    
                    .mobile-view .play-icon {
                        position: absolute !important;
                        top: 50% !important;
                        left: 50% !important;
                        transform: translate(-50%, -50%) !important;
                        z-index: 3 !important;
                        font-size: 2rem !important;
                    }
                    
                    .mobile-view .video-category {
                        padding: 2px 5px !important;
                        font-size: 9px !important;
                        top: 4px !important;
                        right: 4px !important;
                    }
                `;
                document.head.appendChild(styleElement);
                
                // 优化视频资源
                const videoItems = document.querySelectorAll('.video-item');
                videoItems.forEach((item, index) => {
                    // 应用CSS类替代内联样式
                    item.classList.add('mobile-item');
                    
                    // 优化视频元素
                    const video = item.querySelector('video');
                    if (video) {
                        // 确保视频不自动加载
                        video.preload = 'none';
                        
                        // 使用静态图片作为封面
                        if (!video.poster || video.poster.includes('#t=')) {
                            const posterIndex = index % 3;
                            const posterSrc = [
                                'img/videos/case-video-education.jpg',
                                'img/videos/customer-thumb1.jpg',
                                'img/videos/customer-thumb2.jpg'
                            ][posterIndex];
                            video.poster = posterSrc;
                        }
                    }
                });
                
                // 为页面添加低内存监听
                window.addEventListener('blur', () => {
                    VideoResourceManager.releaseUnusedResources();
                });
            }
        }
        
        // 页面加载完成后执行 - 性能优化版
        document.addEventListener('DOMContentLoaded', function() {
            console.log('页面加载完成，开始优化资源...');
            
            // 调用移动端布局处理
            handleMobileLayout();
            
            // 设置视频首帧显示
            initializeVideoThumbnails();
            
            // 使用节流函数处理窗口大小变化
            let resizeTimer;
            window.addEventListener('resize', function() {
                if (resizeTimer) clearTimeout(resizeTimer);
                resizeTimer = setTimeout(handleMobileLayout, 300);
            }, { passive: true });
            
            // 检查视频元素
            const videoElement = document.getElementById('case-video');
            if (videoElement) {
                console.log('找到视频元素:', videoElement);
                
                // 检查所有视频源
                const sources = videoElement.querySelectorAll('source');
                sources.forEach((source, index) => {
                    console.log(`视频源 ${index + 1}:`, source.src);
                });
                
                console.log('视频海报:', videoElement.poster);
                
                // 监听视频事件
                videoElement.addEventListener('loadstart', () => console.log('视频开始加载'));
                videoElement.addEventListener('loadeddata', () => console.log('视频数据已加载'));
                videoElement.addEventListener('loadedmetadata', () => {
                    console.log('视频元数据已加载, 时长:', videoElement.duration);
                    console.log('视频尺寸:', videoElement.videoWidth, 'x', videoElement.videoHeight);
                });
                videoElement.addEventListener('canplay', () => console.log('视频可以播放'));
                videoElement.addEventListener('play', () => console.log('视频开始播放'));
                videoElement.addEventListener('pause', () => console.log('视频已暂停'));
                videoElement.addEventListener('ended', () => console.log('视频播放结束'));
                videoElement.addEventListener('error', (e) => console.error('视频错误:', e, videoElement.error));
            }
            
            // 检查价值卡片
            const valueCards = document.querySelectorAll('.value-card');
            console.log('找到价值卡片数量:', valueCards.length);
            
            // 检查连接线
            const connectorLines = document.querySelectorAll('.connector-line');
            console.log('找到连接线数量:', connectorLines.length);
        });
        
        // 初始化视频缩略图显示
        function initializeVideoThumbnails() {
            const thumbnailVideos = document.querySelectorAll('.thumbnail-video');
            console.log('正在初始化视频缩略图:', thumbnailVideos.length, '个');
            
            thumbnailVideos.forEach((video, index) => {
                // 设置基本属性
                video.muted = true;
                video.playsInline = true;
                video.preload = 'metadata';
                video.controls = false;
                
                // 加载元数据后显示首帧
                video.addEventListener('loadedmetadata', function() {
                    try {
                        console.log(`视频${index+1}元数据已加载`);
                        this.currentTime = 0.1;
                        this.pause();
                    } catch(e) {
                        console.warn('设置视频首帧失败:', e);
                    }
                }, { once: true });
                
                // 错误处理
                video.addEventListener('error', function(e) {
                    console.error(`视频${index+1}加载错误:`, e);
                    const errorDiv = document.createElement('div');
                    errorDiv.className = 'video-error';
                    errorDiv.innerHTML = '<i class="bi bi-exclamation-triangle"></i>';
                    
                    if (this.parentElement && !this.parentElement.querySelector('.video-error')) {
                        this.parentElement.appendChild(errorDiv);
                    }
                }, { once: true });
            });
        }
        
        // 添加全局错误处理
        window.onerror = function(message, source, lineno, colno, error) {
            console.error('全局错误:', message, 'at', source, lineno, colno, error);
            return false;
        };
    </script>
    
