    <!-- 智能数字人对话侧边栏交互脚本 -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleChatSidebar = document.getElementById('toggleChatSidebar');
            const closeChatSidebar = document.getElementById('closeChatSidebar');
            const aiChatSidebar = document.getElementById('aiChatSidebar');
            
            if (!toggleChatSidebar || !closeChatSidebar || !aiChatSidebar) {
                console.error('聊天组件元素未找到');
                return;
            }
            
            toggleChatSidebar.addEventListener('click', function(e) {
                e.stopPropagation();
                aiChatSidebar.classList.toggle('active');
                if (aiChatSidebar.classList.contains('active')) {
                    document.body.style.overflow = 'hidden';
                } else {
                    document.body.style.overflow = '';
                }
            });
            
            closeChatSidebar.addEventListener('click', function() {
                aiChatSidebar.classList.remove('active');
                document.body.style.overflow = '';
            });
            
            // 点击其他区域关闭侧边栏
            document.addEventListener('click', function(e) {
                if (aiChatSidebar.classList.contains('active') && 
                    !aiChatSidebar.contains(e.target) && 
                    e.target !== toggleChatSidebar) {
                    aiChatSidebar.classList.remove('active');
                    document.body.style.overflow = '';
                }
            });
        });
    </script>
