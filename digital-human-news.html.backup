                    this.activeNewsCategory = category;
                },
                setCaseCategory(category) {
                    this.activeCaseCategory = category;
                },
                playVideo(video) {
                    this.currentVideo = video;
                    this.showVideoModal = true;
                    document.body.classList.add('modal-open');
                },
                closeVideoModal() {
                    this.showVideoModal = false;
                    document.body.classList.remove('modal-open');
                    // 停止视频播放
                    const videoElement = document.querySelector('.video-player');
                    if (videoElement) {
                        videoElement.pause();
                        videoElement.currentTime = 0;
                    }
                },
                openNewsDetail(news) {
                    this.currentNews = news;
                    this.showNewsModal = true;
                    document.body.classList.add('modal-open');
                },
                closeNewsModal() {
                    this.showNewsModal = false;
                    document.body.classList.remove('modal-open');
                },
                handleScroll() {
                    // 瀑布流懒加载效果
                    if (this.activeTab === 'cases') {
                        const videoCards = document.querySelectorAll('.case-video-card');
                        videoCards.forEach(card => {
                            const cardPos = card.getBoundingClientRect();
                            // 如果卡片进入视口，添加动画效果
                            if (cardPos.top < window.innerHeight && cardPos.bottom > 0) {
                                card.classList.add('visible');
                            }
                        });
                    }
                },
                toggleTheme() {
                    this.isDarkMode = !this.isDarkMode;
                    if (this.isDarkMode) {
                        document.body.classList.add('dark-mode');
                        localStorage.setItem('digital-human-theme', 'dark');
                    } else {
                        document.body.classList.remove('dark-mode');
                        localStorage.setItem('digital-human-theme', 'light');
                    }
                },
                isHighlightedTech(item) {
                    return item.title.includes("Toolwiz") || item.title.includes("HeyGem") || item.title.includes("DUIX");
                },
                processContent(news) {
                    // 如果内容中已经包含图片标签，需要修正这些图片的src属性
                    let processedContent = news.content;
                    
                    // 提取内容中已有的img标签
                    const imgRegex = /<img[^>]+src="([^"]+)"[^>]*>/g;
                    const imgMatches = [...processedContent.matchAll(imgRegex)];
                    
                    // 如果内容中已有图片，替换为真实可用的图片
                    if (imgMatches.length > 0) {
                        for (const match of imgMatches) {
                            const originalSrc = match[1];
                            let replacementSrc;
                            
                            // 根据不同的内容选择不同的真实图片
                            if (originalSrc.includes('industry-banner')) {
                                replacementSrc = 'img/videos/customer-thumb2.jpg';
                            } else if (originalSrc.includes('silicon-news')) {
                                replacementSrc = 'img/videos/silicon-thumb3.jpg';
                            } else if (originalSrc.includes('news-placeholder')) {
                                replacementSrc = 'img/videos/interaction-thumb3.jpg';
                            } else {
                                // 默认替换图片
                                replacementSrc = 'img/videos/customer-thumb1.jpg';
                            }
                            
                            // 替换原始src
                            processedContent = processedContent.replace(
                                match[0],
                                match[0].replace(originalSrc, replacementSrc)
                            );
                        }
                        return processedContent;
                    }
                    
                    // 如果内容中没有图片，插入一个
                    const imgPath = this.getImagePath(news);
                    
                    // 找到第一个h3标签后的位置来插入图片
                    const h3Pos = processedContent.indexOf('</h3>');
                    
                    // 如果找到h3标签，在其后插入图片
                    if (h3Pos > -1) {
                        const imageTag = `</h3><div class="content-image-container"><img src="${imgPath}" alt="${news.title}" class="content-image" onerror="this.src='img/videos/customer-thumb1.jpg'"></div>`;
                        processedContent = processedContent.replace('</h3>', imageTag);
                    } else {
                        // 如果没有h3标签，在第一个段落后插入
                        const pPos = processedContent.indexOf('</p>');
                        if (pPos > -1) {
                            const imageTag = `</p><div class="content-image-container"><img src="${imgPath}" alt="${news.title}" class="content-image" onerror="this.src='img/videos/customer-thumb1.jpg'"></div>`;
                            processedContent = processedContent.replace('</p>', imageTag);
                        }
                    }
                    
                    return processedContent;
                },
                getImagePath(news) {
                    // 完全重写图片路径处理逻辑
                    // 所有原始路径都有问题，使用实际存在的图片替代
                    
                    // 初始化真实可用的图片数组
                    const realImages = [
                        'img/case-donna.jpg',
                        'img/profile-avatar.jpg',
                        'img/videos/customer-thumb1.jpg',
                        'img/videos/customer-thumb2.jpg',
                        'img/videos/customer-thumb3.jpg',
                        'img/videos/customer-thumb4.jpg',
                        'img/videos/interaction-thumb1.jpg',
                        'img/videos/interaction-thumb2.jpg',
                        'img/videos/silicon-thumb1.jpg',
                        'img/videos/silicon-thumb2.jpg'
                    ];
                    
                    // 根据文章类别和索引选择图片
                    if (news.title.includes('签就业协议') || news.title.includes('全媒体运营')) {
                        return 'img/videos/customer-thumb1.jpg';
                    } else if (news.title.includes('114.4万家') || news.title.includes('企业数量')) {
                        return 'img/videos/interaction-thumb1.jpg';
                    } else if (news.title.includes('应用场景') || news.title.includes('三大方向')) {
                        return 'img/videos/silicon-thumb1.jpg';
                    } else if (news.title.includes('技术标准') || news.title.includes('标准体系')) {
                        return 'img/videos/customer-thumb2.jpg';
                    } else if (news.title.includes('黄金期') || news.title.includes('政策')) {
                        return 'img/videos/customer-thumb3.jpg';
                    } else if (news.title.includes('Toolwiz') || news.title.includes('工具')) {
                        return 'img/videos/silicon-thumb2.jpg';
                    } else if (news.title.includes('HeyGem') || news.title.includes('秒级克隆')) {
                        return 'img/videos/interaction-thumb2.jpg';
                    } else if (news.title.includes('DUIX') || news.title.includes('交互平台')) {
                        return 'img/videos/customer-thumb4.jpg';
                    }
                    
                    // 随机选择一个真实图片
                    const randomIndex = Math.floor(Math.random() * realImages.length);
                    return realImages[randomIndex];
                },
                handleImageError(event) {
                    // 使用真实图片代替占位图
                    const realImages = [
                        'img/case-donna.jpg',
                        'img/videos/customer-thumb1.jpg', 
                        'img/videos/customer-thumb2.jpg',
                        'img/videos/interaction-thumb1.jpg',
                        'img/videos/silicon-thumb1.jpg'
                    ];
                    
                    // 随机选择一个真实图片
                    const randomIndex = Math.floor(Math.random() * realImages.length);
                    event.target.src = realImages[randomIndex];
                }
            },
            mounted() {
                // 检查URL参数，自动切换到相应的标签
                const urlParams = new URLSearchParams(window.location.search);
                const tab = urlParams.get('tab');
                if (tab === 'cases') {
                    this.activeTab = 'cases';
                    
                    // 等待DOM更新后再添加可见性
                    this.$nextTick(() => {
                        // 初始化视口内卡片的可见性
                        this.handleScroll();
                    });
                }
                
                // 添加滚动监听，实现瀑布流加载效果
                window.addEventListener('scroll', this.handleScroll);
                
                // 检查用户主题偏好
                const savedTheme = localStorage.getItem('digital-human-theme');
                if (savedTheme === 'dark') {
                    this.isDarkMode = true;
                    document.body.classList.add('dark-mode');
                } else if (savedTheme === null) {
                    // 如果用户没有设置过主题偏好，则检查系统偏好
                    const prefersDarkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
                    if (prefersDarkMode) {
                        this.isDarkMode = true;
                        document.body.classList.add('dark-mode');
                        localStorage.setItem('digital-human-theme', 'dark');
                    } else {
                        localStorage.setItem('digital-human-theme', 'light');
                    }
                }
            },
            beforeDestroy() {
                // 移除事件监听
                window.removeEventListener('scroll', this.handleScroll);
            }
        });
